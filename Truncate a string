
function truncateString(str, num) {
  // Clear out that junk in your trunk
 
    
    if(str.length > num && num > 3){
      
      var str1 = str.slice(0,num-3) + "...";
      return str1;
      
    }else if(num <= 3){
        return str.slice(0, num)+"...";
    }else{
       return str.slice(0,num);
       
    }
     
  
}


truncateString("A-", 1);
