
function sumAll(arr) {
  
  var sum = 0;
  
  // EcmaScript6 , released in 2015, not yet updated everywhere
  for(var i = Math.min(...arr); i <= Math.max(...arr); i++){
    sum += i;
  }
  
  return sum;
  
  
}

sumAll([1, 4]);


